<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

            <com.albertribas_ericcaballero_albertmarlet.proyecto_final.Utils.RoundedImageView
                android:layout_width="100dp"
                android:minHeight="100dp"
                android:layout_height="100dp"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:id="@+id/imageView5"
                android:layout_gravity="center_horizontal"
                app:layout_collapseMode="parallax"
                android:layout_marginTop="25dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:id="@+id/flechaLeft"
                android:scaleType="center"
                android:background="@color/colorPrimary"/>
            <TextView android:text="Albert Ribas Garcia"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:id="@+id/flechaRight"
                android:scaleType="center"
                android:background="@color/colorPrimary"/>
        </LinearLayout>


    </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:id="@+id/RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_scrollFlags="scroll|enterAlways"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/Tutorial5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="12"
                    android:background="@drawable/border_layout">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView android:text="Nombre:"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.75"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/etName"
                    android:editable="false"
                    android:inputType="none"
                    android:layout_width="0dp"
                    android:layout_weight="7.75"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/LLLastName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView android:text="Apellidos:"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.75"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/etLastName"
                    android:editable="false"
                    android:inputType="none"
                    android:layout_width="0dp"
                    android:layout_weight="7.75"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView android:text="Email:"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.75"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/etEmail"
                    android:editable="false"
                    android:inputType="none"
                    android:layout_width="0dp"
                    android:layout_weight="7.75"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/LLPass"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView android:text="ContraseÃ±a:"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.75"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/etPassword"
                    android:editable="false"
                    android:inputType="none"
                    android:hint="NEW"
                    android:layout_width="0dp"
                    android:layout_weight="6.25"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

                <ImageButton android:src="@android:drawable/ic_input_add"
                    android:background="@drawable/round_corner_color"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:id="@+id/bt_password"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView android:text="Positivos:"
                    android:src="@android:drawable/ic_menu_edit"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.75"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical" />

                <TextView android:text="+15"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:id="@+id/tvUpPoints"
                    android:layout_width="0dp"
                    android:layout_weight="7.75"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView android:text="Negativos:"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.75"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical" />

                <TextView android:text="-0"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:id="@+id/tvDownPoints"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="7.75"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <Button android:text="Cancelar"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/round_corner_color"
                            android:id="@+id/BT_cancel"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="30dp" />

                        <Button android:text="Guardar"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/round_corner_color"
                            android:id="@+id/BT_edit"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="30dp" />
                    </LinearLayout>

            </LinearLayout>
            </ScrollView>
        </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
