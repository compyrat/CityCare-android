<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="15dp"
    card_view:cardBackgroundColor="#f0f0f0"
    card_view:contentPadding="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de incidencia:"
                android:id="@+id/textview2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE"
                android:id="@+id/incidenceNameTextView"
                android:textSize="18sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LocalizaciÃ³n:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/textview3"
                android:textSize="18sp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOCALIZACION"
                android:id="@+id/incidenceLocationTextView"
                android:textSize="18sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de incidencia:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/textview4"
                android:textSize="18sp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIPO"
                android:id="@+id/incidenceTypeTextView"
                android:textSize="18sp"
                android:layout_marginTop="5dp"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:background="@drawable/border_layout"
                android:id="@+id/imageDialog"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:text="No"
                android:id="@+id/buttonNo"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_corner_color" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:text="Si"
                android:id="@+id/buttonSi"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round_corner_color" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
