<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3b5998" />
            <gradient android:angle="-90" android:startColor="#35415b" android:endColor="#69799b"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5f687b" />
            <solid android:color="#3b5998"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3b5998" />
            <gradient android:angle="-90" android:startColor="#8b9ab9" android:endColor="#596786" />
        </shape>
    </item>
</selector>